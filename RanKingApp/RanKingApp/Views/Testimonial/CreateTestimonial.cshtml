<div style="padding:2%;margin-top:2%">
    

    <div class="card card-pricing card-raised">
        <div class="card-header card-header-text" data-background-color="green" style="width:98%">
            <h4 id="txtName" class="card-title" style="margin-top:-0.02%"></h4>
            <p id="txtTitle" class="category"></p>
        </div>
        <div class="content">
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
