<script>

    function radioChanged() {
        if (document.getElementById('record').checked) {
            $('#btn_test').hide();
            $('#testimonial_record').show();
            document.getElementById('youtubeURL').disabled = true;
        }
        else {
            $('#btn_test').show();
            document.getElementById('btn_test').disabled = true;
            document.getElementById('youtubeURL').disabled = false;
            $('#testimonial_record').hide();
        }
    }

</script>









